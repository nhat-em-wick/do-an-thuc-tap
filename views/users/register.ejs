<%- include('../layouts/header'); %>

<body>
  <%- include('../layouts/nav'); %>
  <div class="container">
    <%- include('../msg-err/msg'); %>
    <form action="/register" method="post">
      <label for="name" class="sr-only">Name</label>
      <input type="text" id="name" name="name" class="form-control" placeholder="Name"
        value="<%= typeof name != 'undefined' ? name : null %>">

      <label for="email" class="sr-only">Email address</label>
      <input type="email" id="email" name="email" class="form-control" placeholder="Email address"
        value="<%= typeof email != 'undefined' ? email : null %> ">

      <label for="password" class="sr-only">Password</label>
      <input type="password" id="password" name="password" class="form-control" placeholder="Password" required=""
        value="<%= typeof password != 'undefined' ? password : null %>">

    <!-- <input type="password" id="password2" name="password2" class="form-control" placeholder="Conf Password"
        required="" value="<%= //typeof password2 != 'undefined' ? password2 : null %>">
--> 
      <button class="btn btn-lg btn-primary btn-block" type="submit">Create</button>
    </form>
  </div>
  <%- include('../layouts/footer'); %>
</body>