<%- include('../layouts/header'); %>
<body>
    <%- include('../layouts/nav')%> 
    <h1>Add Product</h1>
    <div class="container">
        <%- include('../msg-err/msg'); %>
        <form action="" method="post" enctype="multipart/form-data">
          <label for="title" class="sr-only">Title</label>
          <input type="text" id="title" name="title" class="form-control" placeholder="Title"
            value="<%= typeof title != 'undefined' ? title : null %>">
    
          <label for="description" class="sr-only">Description</label>
          <textarea name="description" id="description" class="form-control" ><%= typeof description != 'undefined' ? description : null %></textarea>
    
        <input type="text" id="price" name="price" class="form-control" placeholder="Price"
            required="" value="<%= typeof price != 'undefined' ? price : null %>">
            <input type="file" name="mybook" class="form-control-file" >
          <button class="btn btn-lg btn-primary btn-block" type="submit">Add Product</button>
        </form>
      </div>

    <%- include('../layouts/footer')%> 
</body>